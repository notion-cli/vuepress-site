@import url('https://fonts.googleapis.com/css?family=Kaushan+Script');

.home .hero img {
    width: 100%;
    top: $navbarHeight;
}

.home .hero h1 {
    font-family: 'Kaushan Script';
    color: white;
}

.navbar .site-name {
    font-family: 'Kaushan Script';
    color: $accentColor;
}

.home .hero {
    font-size: 200%;
}

.home .hero h1 {
    padding: 0.5em 0;
    border-radius: 4px;
}

.home .hero h1 {
    background-position: top center;
    background-image: url('/rosesky.jpg');
    background-repeat: no-repeat;
}

.home .hero h1 {
    width: 10em;
    background-size: 10em;
}

// narrow desktop / iPad
@media (max-width: $MQNarrow)
  .home
    .hero
      h1
        width: 8em
        background-size: 8em

// wide mobile
@media (max-width: $MQMobile)
  .home
    .hero
      h1
        width: 6em
        background-size: 6em

// narrow mobile
@media (max-width: $MQMobileNarrow)
  .home
    .hero
      h1
        width: 6em
        background-size: 6em
